<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_bg"
    android:orientation="vertical"
    tools:context=".Education">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#B2EBF2"
        xmlns:circular="http://schemas.android.com/apk/res/com.portfolio.arshan.portfolio"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="JNTU College of Engineering, Anantapur"
                android:textSize="23dp"
                android:textColor="#795548"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#8D6E63"
                android:text="Computer Science and Engineering"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#43A047"
                android:textSize="10dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="2011-15"/>
        </LinearLayout>

        <com.portfolio.arshan.portfolio.CircularProgressBar
            android:id="@+id/btechProgressBar"
            style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_marginTop="10dip"
            circular:cpb_subtitle=""
            circular:cpb_title="Title" />
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:src="@color/colorDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#B2EBF2"
        xmlns:circular="http://schemas.android.com/apk/res/com.portfolio.arshan.portfolio"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="S.V.Govt Polytechnic, Tirupathi"
                android:textSize="23dp"
                android:textColor="#795548"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#8D6E63"
                android:text="Computer Science and Engineering"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#43A047"
                android:textSize="10dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="2008-11"/>
        </LinearLayout>

        <com.portfolio.arshan.portfolio.CircularProgressBar
            android:id="@+id/diplomaProgressBar"
            style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_marginTop="10dip"
            circular:cpb_subtitle=""
            circular:cpb_title="Title" />
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:src="@color/colorDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#B2EBF2"
        xmlns:circular="http://schemas.android.com/apk/res/com.portfolio.arshan.portfolio"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="Z.P.High School, N.R.Palli"
                android:textSize="23dp"
                android:textColor="#795548"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#8D6E63"
                android:text="SSC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#43A047"
                android:textSize="10dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="2008"/>
        </LinearLayout>

        <com.portfolio.arshan.portfolio.CircularProgressBar
            android:id="@+id/sscProgressBar"
            style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_marginTop="10dip"
            circular:cpb_subtitle=""
            circular:cpb_title="Title" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>


